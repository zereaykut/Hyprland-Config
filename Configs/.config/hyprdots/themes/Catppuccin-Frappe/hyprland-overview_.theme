#mainWindow {
    background-color: #background;
    border-radius: 10px;
    color: white;
    font-family: "Segoe UI";
    font-size: 11pt;
}

#windowLabel {
    background-color: #active-foreground;
    border: 2px solid black;
    padding: 4px;
    border-radius: 6px;
    color: #active-background;
}

#gridCell {
    background-color: #background;
}

#specialCell {
    background-color: #background;
    border: 2px solid #hover-background;
}


/* Style the context menu */
QMenu {
    background-color: #background;       /* Background of the menu */
    color: #active-background;                  /* Text color */
    border: 1px solid #444;          /* Border around the menu */
    padding: 4px;
}

/* Style each item in the menu */
QMenu::item {
    background-color: transparent;  /* Default background for item */
    padding: 6px 20px;              /* Padding inside items */
}

/* Highlighted item (hover or selected) */
QMenu::item:selected {
    background-color: #active-foreground;      /* Highlight color */
    color: #active-background;                 /* Text color on hover */
}

/* Optional: disabled menu item */
QMenu::item:disabled {
    color: red;                 /* Color for disabled items */
}

